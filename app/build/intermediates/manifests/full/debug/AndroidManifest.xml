                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bowenshi.intersaclay.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="com.example.bowenshi.intersaclay.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.bowenshi.intersaclay.AccountActivity"
            android:label="@string/title_activity_account"
            android:parentActivityName="com.example.bowenshi.intersaclay.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

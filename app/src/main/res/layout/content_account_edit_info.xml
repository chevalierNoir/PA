<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.bowenshi.intersaclay.AccountEditInfoActivity"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:title="@string/title_account_edit_info"
        app:popupTheme="@style/AppTheme.PopupOverlay">
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/addphoto"
                    android:id="@+id/account_edit_use_image"
                    android:scaleType="centerCrop"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/mybuttongreen"
                    android:text="Change Photo"
                    android:id="@+id/account_change_image_button"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="My Account:"
                    android:textColor="#000000"
                    android:lines="2"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/account_edit_username"
                    android:background="@drawable/myedittext"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="right|center_vertical"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="My Address:"
                    android:textColor="#000000"
                    android:lines="2"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="right|center_vertical"
                    android:id="@+id/account_edit_adrs"
                    android:background="@drawable/myedittext"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="Name:"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="@dimen/text_box_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="right|center_vertical"
                    android:id="@+id/account_edit_realname"
                    android:background="@drawable/myedittext"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="Sex:"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="center"/>
                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:entries="@array/sex"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="right|center_vertical"
                    android:id="@+id/account_edit_sexSpin">
                </Spinner>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="Email:"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="@dimen/text_box_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/account_edit_email"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/myedittext"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="School:"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="@dimen/text_box_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/account_edit_school"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/myedittext"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="Skills:"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="@dimen/text_box_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/account_edit_skills"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/myedittext"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/long_button_height"
                android:layout_marginTop="@dimen/items_margin_top">
                <Button
                    android:layout_width="@dimen/short_button_width"
                    android:layout_height="match_parent"
                    android:background="@drawable/mybutton1"
                    android:text="Cancel"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/account_edit_cancel"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="center"/>

                <Button
                    android:layout_width="@dimen/short_button_width"
                    android:layout_height="match_parent"
                    android:background="@drawable/mybutton1"
                    android:text="OK"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/account_edit_ok"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="center"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bowenshi.intersaclay.RegisterActivity"
    tools:showIn="@layout/activity_register">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="User Name:"
                    android:textColor="#000000"
                    android:lines="2"
                    android:textSize="@dimen/text_box_text_size"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/myedittext"
                    android:gravity="center"
                    android:id="@+id/pseudoNameEdit"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="Real Name:"
                    android:id="@+id/nameView"
                    android:lines="2"
                    android:textSize="@dimen/text_box_text_size"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/nameEdit"
                    android:background="@drawable/myedittext"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="Sex:"
                    android:id="@+id/sexView"
                    android:lines="2"
                    android:textSize="@dimen/text_box_text_size"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:entries="@array/sex"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/sexSpin">

                </Spinner>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="Adress:"
                    android:id="@+id/adrsView"
                    android:lines="2"
                    android:textSize="@dimen/text_box_text_size"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/adrsEdit"
                    android:background="@drawable/myedittext"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="Email:"
                    android:id="@+id/emailView"
                    android:lines="2"
                    android:textSize="@dimen/text_box_text_size"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/emailEdit"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/myedittext"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="School:"
                    android:id="@+id/schoolView"
                    android:lines="2"
                    android:textSize="@dimen/text_box_text_size"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/schoolEdit"
                    android:background="@drawable/myedittext"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="PassWord:"
                    android:id="@+id/pswView"
                    android:lines="2"
                    android:textSize="@dimen/text_box_text_size"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/pswEdit"
                    android:password="true"
                    android:background="@drawable/myedittext"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="Confirm \n PassWord:"
                    android:id="@+id/confirmView"
                    android:lines="2"
                    android:textSize="@dimen/text_box_text_size"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/confirmEdit"
                    android:password="true"
                    android:background="@drawable/myedittext"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="30dp">
                <Button
                    android:layout_width="@dimen/short_button_width"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/cancelButton"
                    android:layout_marginBottom="62dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/mybutton1"
                    android:onClick="cancel"/>
                <Button
                    android:layout_width="@dimen/short_button_width"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:id="@+id/registerButton"
                    android:layout_marginBottom="62dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/mybutton1"
                    android:onClick="record"/>
            </RelativeLayout>




        </LinearLayout>


    </ScrollView>



</RelativeLayout>



